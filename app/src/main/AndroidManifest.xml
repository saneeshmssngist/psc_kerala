<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.saneesh.psc_kerala">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/quizrr_logo"
        android:roundIcon="@mipmap/quizrr_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.GeneralHomeActivity" />
        <activity android:name=".Activities.GeneralActivity" />
        <activity android:name=".Activities.GameActivity" />
        <activity android:name=".Activities.GameHomeActivity" />
        <activity android:name=".Activities.MockHomeActivity" />
        <activity android:name=".Activities.MockActivity" />
        <activity android:name=".Activities.MockReviewActivity" />
        <activity android:name=".Activities.QuestionPaperActivity" />
        <activity android:name=".Activities.QuestionPaperHomeActivity" />
        <activity android:name=".Activities.TopicActivity" />
        <activity android:name=".Activities.TopicHomeActivity" />
        <activity android:name=".Activities.HomeActivity" />
        <activity android:name=".Activities.PreHomeActivity" />

        <service android:name=".FCMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".FcmInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>