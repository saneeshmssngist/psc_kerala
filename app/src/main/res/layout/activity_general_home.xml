                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgGeography"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
