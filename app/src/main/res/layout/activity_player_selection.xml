<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Online Challenge"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Selecting from"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:alpha="0.5"
            />
        <TextView
            android:id="@+id/txtPlayerCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="250 Online Players"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            />

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/layout"
        android:paddingTop="50dp"
        android:background="@color/master_blue_light"
        android:gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-3dp"
        android:layout_marginStart="0dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgViewPlayer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/white"
            android:src="@drawable/girl"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="69dp"
            android:layout_height="37dp"
            android:layout_below="@+id/imgViewPlayer"
            android:text="You"
            android:end="@+id/imgViewPlayer"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/textView8" android:layout_marginStart="80dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgViewPlayer"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnim"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="search.json"
            app:lottie_loop="true"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/imgViewPlayer"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.564"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgViewOpponent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/white"
            android:src="@drawable/girl"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txtViewOpponent"
            android:layout_width="135dp"
            android:layout_height="41dp"
            android:text="searching..."
            android:end="@+id/imgViewPlayer"
            android:textColor="@color/grey_text"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            android:layout_marginStart="64dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btmNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:visibility="gone"
            app:backgroundTint="@color/master_green1"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintVertical_bias="0.322" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>