<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="1dp"
        app:cardElevation="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"

            >

            <LinearLayout
                android:id="@+id/layoutTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txtQuestionNo"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Q1"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtQuestion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txtQuestionNo"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:text="ndsjkannsanmdbnasnbdn dsbahdbh dsahbdhshabdh sdbhsakjdh jkdbsajkhdjdnjsa"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgAnswer"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_remove_red_eye"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:id="@+id/layoutOption1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/questions_paper_bg"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        >
                        <TextView
                            android:id="@+id/txtOption1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="bsdjkabdasbjsagsndmnm "
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutOption2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/questions_paper_bg"
                        android:padding="5dp"
                        >
                        <TextView
                            android:id="@+id/txtOption2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="sabdhbbdsa"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <LinearLayout
                        android:id="@+id/layoutOption3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/questions_paper_bg"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        >
                        <TextView
                            android:id="@+id/txtOption3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:text="dbasbjkbdsa"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutOption4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/questions_paper_bg"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        >
                        <TextView
                            android:id="@+id/txtOption4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:text="dbasbjkbdsa"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>