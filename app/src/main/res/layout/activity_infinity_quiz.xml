<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/activity_sample"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/quizrr_bg_4"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
    >

        <RelativeLayout
                android:id="@+id/layoutTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >

            <RelativeLayout
                    android:id="@+id/layoutShare"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/optionss"
                    android:onClick="profileOptionClick"
                    android:background="@drawable/pop_option1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:alpha="0.2"
            >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_person"
                        android:padding="7dp"
                />
            </RelativeLayout>


                <!--<pl.droidsonroids.gif.GifImageView-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_alignParentRight="true" />-->

                <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/optionss"
                        android:background="@drawable/pop_option1"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                >
                    <TextView
                            android:id="@+id/txtViewCoins"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/golden"
                            android:textSize="14sp"
                            android:textStyle="bold"
                    />
                </RelativeLayout>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="Q. 0"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:visibility="gone"
            />

            <RelativeLayout
                    android:id="@+id/timerLayout"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:background="@drawable/question_number_bg"
                    android:layout_centerVertical="true"
            >

                <TextView
                        android:id="@+id/txtViewQuestionNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:alpha="0.5"
                />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
                android:id="@+id/txtViewTimeout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timerLayout"
                android:gravity="center"
                android:text="Time Out"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="10dp"
        >

            <TextView
                    android:id="@+id/txtViewQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_above="@+id/optionsLayout"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Question ?"
                    android:textColor="@color/white"
                    android:fontFamily="RA"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="48dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"/>


            <LinearLayout
                    android:id="@+id/optionsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/txtViewQuestion"
                    app:layout_constraintVertical_bias="0.100000024"
                >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:id="@+id/layoutOption1"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:background="@drawable/game_quiz_optionss"
                            android:elevation="10dp">

                        <TextView
                                android:id="@+id/txtNum1"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/game_quiz_num"
                                android:gravity="center"
                                android:text="A"
                                android:textColor="@color/white"
                                android:textSize="14sp"/>

                        <TextView
                                android:id="@+id/txtViewOption1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Option1"
                                android:textColor="@color/white"
                                android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/layoutOption2"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/game_quiz_optionss"
                            android:elevation="10dp"
                            android:gravity="center">

                        <TextView
                                android:id="@+id/txtNum2"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/game_quiz_numss"
                                android:gravity="center"
                                android:text="B"
                                android:textColor="@color/white"
                                android:textSize="14sp"/>

                        <TextView
                                android:id="@+id/txtViewOption2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Option2"
                                android:textColor="@color/white"
                                android:textSize="14sp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:id="@+id/layoutOption3"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:background="@drawable/game_quiz_optionss"
                            android:elevation="10dp">

                        <TextView
                                android:id="@+id/txtNum3"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/game_quiz_num"
                                android:gravity="center"
                                android:text="C"
                                android:textColor="@color/white"
                                android:textSize="14sp"/>

                        <TextView
                                android:id="@+id/txtViewOption3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Option3"
                                android:textColor="@color/white"
                                android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/layoutOption4"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/game_quiz_optionss"
                            android:elevation="10dp"
                            android:gravity="center">

                        <TextView
                                android:id="@+id/txtNum4"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/game_quiz_num"
                                android:gravity="center"
                                android:text="D"
                                android:textColor="@color/white"
                                android:textSize="14sp"/>

                        <TextView
                                android:id="@+id/txtViewOption4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Option4"
                                android:textColor="@color/white"
                                android:textSize="14sp"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <ImageView
            android:id="@+id/imgView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/optionss"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:alpha="0.3"
            android:layout_marginBottom="5dp"
    />

    <com.google.android.gms.ads.AdView
            android:id="@+id/adMobView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:adSize="BANNER"
            app:adUnitId="@string/BANNERID"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
    />

    <LinearLayout
            android:id="@+id/layoutButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:visibility="visible">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
        />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/layoutButtonLeft"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:gravity="bottom"
            android:orientation="vertical"
            android:visibility="gone"
    >

        <ImageView
                android:id="@+id/imgViewVolumeOn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_volume_up"
                android:visibility="visible"/>
        <ImageView
                android:id="@+id/imgViewVolumeOff"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_volume_off"
                android:visibility="gone"/>

    </LinearLayout>


    <LinearLayout
            android:id="@+id/layoutProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avilayoutProgress"
                style="@style/AVLoadingIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:indicatorColor="@color/avLoadingColor"
                app:indicatorName="BallPulseIndicator"/>
    </LinearLayout>


</RelativeLayout>
